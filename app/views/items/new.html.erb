<div class="main-container">
  <h2>Criar Novo Item</h2>

  <%= form_with(model: [@list, @new_item], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :description, "Descrição do Item" %>
      <%= form.text_field :description, class: "form-control", placeholder: "Digite a descrição do item" %>
    </div>

    <div class="form-group">
      <%= form.label :tag_ids, "Tags" %>
      <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name do |b| %>
        <div class="checkbox">
          <%= b.check_box %> <%= b.text %>
        </div>
      <% end %>
    </div>
    
    <div class="form-group">
      <%= form.label :is_done, "Está feito?" %>
      <%= form.check_box :is_done %>
    </div>
  
    <div class="buttons-container">
      <%= link_to "Voltar", @list, class: "btn btn-secondary" %>
      <%= form.submit "Criar Item", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
